@model SignUpViewModel

<div class="row offset-3 mt-5">

    <div class="col-6" style="width:60%">

        <div class="card">

            <div class="card-header fw-bold fs-4 text-center">
                Sign-Up Form
            </div>

            <div class="card-body">

                <form method="post" asp-controller="Auth" asp-action="SignUp">

                    <div class="form-floating mb-2">
                        <input asp-for="FullName" type="fullname" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Ad Ve Soyad</label>
                    </div>
                    
                    <div class="form-floating mb-2">
                        <input asp-for="PhoneNumber" type="phonenumber" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Telefon Numarası</label>
                    </div>

                    <div class="form-floating mb-2">
                        <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Email adresi</label>
                    </div>

                    <div class="form-floating mb-2">
                        <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Parola</label>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="PasswordConfirm" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Parola Onay</label>
                    </div>


                    <button class="btn btn-primary w-100 py-2" type="submit">Sign Up</button>
                    <p class="mt-5 mb-3 text-body-secondary">© 2017–2024</p>
                </form>




            </div>





        </div>


    </div>


</div>